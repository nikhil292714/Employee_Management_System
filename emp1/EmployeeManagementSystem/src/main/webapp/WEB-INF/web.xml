<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.empServlet.EmployeeServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>Addemp</servlet-name>
    	<display-name>Addemp</display-name>
    	<description></description>
    	<servlet-class>Controller.Addemp</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>DeleteEmp</servlet-name>
    	<display-name>DeleteEmp</display-name>
    	<description></description>
    	<servlet-class>Controller.DeleteEmp</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>DisplayAll</servlet-name>
    	<display-name>DisplayAll</display-name>
    	<description></description>
    	<servlet-class>Controller.DisplayAll</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>Editemp</servlet-name>
    	<display-name>Editemp</display-name>
    	<description></description>
    	<servlet-class>Controller.Editemp</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>Saveemp</servlet-name>
    	<display-name>Saveemp</display-name>
    	<description></description>
    	<servlet-class>Controller.Saveemp</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>LoginServlet</servlet-name>
    	<display-name>LoginServlet</display-name>
    	<description></description>
    	<servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>LogoutServlet</servlet-name>
    	<display-name>LogoutServlet</display-name>
    	<description></description>
    	<servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/EmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>Addemp</servlet-name>
    	<url-pattern>/adds</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>DeleteEmp</servlet-name>
    	<url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>DisplayAll</servlet-name>
    	<url-pattern>/displays</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>Editemp</servlet-name>
    	<url-pattern>/submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>Saveemp</servlet-name>
    	<url-pattern>/save</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>LoginServlet</servlet-name>
    	<url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>LogoutServlet</servlet-name>
    	<url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>
